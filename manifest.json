{
    "name": "Nodistract",
    "description": "Приложение, позволяющее скрывать и блокировать объекты, отвлекающие внимание.",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons": {
        "16": "./images/icons/icon16x16.png",
        "32": "./images/icons/icon32x32.png",
        "48": "./images/icons/icon48x48.png",
        "128": "./images/icons/icon128x128.png"
    },
    "background": {
        "scripts": ["./background.js"]
    },
    "options_page": "./options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}